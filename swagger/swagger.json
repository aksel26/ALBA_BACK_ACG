                    "details": "Detailed job information",
                    "dress_code": "Casual",
                    "type": "Offline",
                    "post_duration": "1 month",
                    "lunch_break": "1 hour",
                    "max_applicants": 5,
                    "location": "123 Main St",
                    "wage": "15 USD/hour",
                    "created_at": "2023-01-01T00:00:00.000Z",
