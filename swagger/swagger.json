  "components": {
    "schemas": {
      "Admin": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["email", "password"],
        "example": {
          "email": "admin@example.com",
          "password": "securepassword"
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "phone_number": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "date_of_birth": {
            "type": "string",
            "format": "date"
          },
          "experience": {
            "type": "integer"
          },
          "warnings": {
            "type": "integer"
          },
          "gender": {
            "type": "string",
            "enum": ["Male", "Female", "Other"]
          },
          "special_notes": {
            "type": "string"
          },
          "device_token": {
            "type": "string"
          },
          "is_approved": {
            "type": "boolean"
          },
          "is_dormant": {
            "type": "boolean"
          },
          "last_login": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["email", "password"],
        "example": {
          "email": "user@example.com",
          "password": "securepassword",
          "name": "User One",
          "phone_number": "123-456-7890",
          "address": "123 Main St",
          "date_of_birth": "1990-01-01",
          "experience": 3,
          "warnings": 0,
          "gender": "Male",
          "special_notes": "None",
          "device_token": "device_token_example",
          "is_approved": true,
          "is_dormant": false,
          "last_login": "2023-04-01T00:00:00.000Z"
        }
      },
      "Platform": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "required": ["name"],
        "example": {
          "name": "Online Platform"
        }
      },
      "JobPost": {
        "type": "object",
        "properties": {
          "admin_id": {
            "type": "integer"
          },
          "platform_id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "details": {
            "type": "string"
          },
          "dress_code": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["Offline", "Online"]
          },
          "post_duration": {
            "type": "string"
          },
          "lunch_break": {
            "type": "string"
          },
          "max_applicants": {
            "type": "integer"
          },
          "location": {
            "type": "string"
          },
          "wage": {
            "type": "string"
          }
        },
        "required": ["admin_id", "platform_id", "title", "type"],
        "example": {
          "admin_id": 1,
          "platform_id": 1,
          "title": "Part-Time Job",
          "description": "A part-time job description",
          "details": "Detailed job information",
          "dress_code": "Casual",
          "type": "Offline",
          "post_duration": "1 month",
          "lunch_break": "1 hour",
          "max_applicants": 5,
          "location": "123 Main St",
          "wage": "15 USD/hour"
        }
      },
      "Application": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "integer"
          },
          "job_post_id": {
            "type": "integer"
          },
          "status": {
            "type": "string",
            "enum": ["Pending", "Approved", "Rejected"]
          }
        },
        "required": ["user_id", "job_post_id"],
        "example": {
          "user_id": 1,
          "job_post_id": 1,
          "status": "Pending"
        }
      }
    }
  }
}
