    "/admins": {
      "post": {
        "summary": "Create Admin",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Admin"
              },
              "example": {
                "email": "admin@example.com",
                "password": "securepassword"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Admin created"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/admins/login": {
      "post": {
        "summary": "Admin Login",
