    "/applications": {
      "post": {
        "summary": "Create Application",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Application"
              },
              "example": {
                "user_id": 1,
                "job_post_id": 1
              }
