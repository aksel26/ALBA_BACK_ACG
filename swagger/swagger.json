    "/job-posts": {
      "post": {
        "summary": "Create Job Post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JobPost"
              },
              "example": {
                "admin_id": 1,
                "platform_id": 1,
                "title": "Part-Time Job",
                "description": "A part-time job description",
                "details": "Detailed job information",
                "dress_code": "Casual",
                "type": "Offline",
                "post_duration": "1 month",
                "post_sDate": "2023-04-01T00:00:00.000Z",
                "post_eDate": "2023-04-01T00:00:00.000Z",
                "lunch_sDate": "2023-04-01T00:00:00.000Z",
                "lunch_eDate": "2023-04-01T00:00:00.000Z",
                "lunch_break": "1 hour",
                "max_applicants": 5,
                "location": "123 Main St",
                "wage": 40000
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Job post created"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      },
