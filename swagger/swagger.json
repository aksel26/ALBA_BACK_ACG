              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Application"
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "user_id": 1,
                    "job_post_id": 1,
                    "created_at": "2023-01-01T00:00:00.000Z",
                    "status": "Pending"
                  },
                  {
                    "id": 2,
                    "user_id": 1,
                    "job_post_id": 2,
                    "created_at": "2023-01-02T00:00:00.000Z",
                    "status": "Approved"
                  }
                ]
              }
            }
          },
          "400": {
            "description": "Error fetching applications"
          }
        }
      }
    }
