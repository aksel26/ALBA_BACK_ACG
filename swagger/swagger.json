    },
    "/applications/{id}": {
      "put": {
        "summary": "Update Application Status",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["Pending", "Approved", "Rejected"]
                  }
                },
                "required": ["status"],
                "example": {
                  "status": "Approved"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Application status updated"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
